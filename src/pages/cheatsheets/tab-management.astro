---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ShortcutTable from '../../components/ShortcutTable.astro';
import shortcuts from '../../data/shortcuts.json';

const filtered = shortcuts.filter(s => s.category === 'tab-management');
const groups: Record<string, typeof filtered> = {};
for (const s of filtered) {
  (groups[s.subcategory] ??= []).push(s);
}
---
<BaseLayout title="Tab Management Shortcuts" description="Keyboard shortcuts for managing tabs in browsers, terminals, and file managers.">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6 flex items-center gap-2" style="color: var(--text-muted);">
      <a href="/" class="hover:text-ubuntu-orange transition-colors">Home</a>
      <span>/</span>
      <a href="/cheatsheets" class="hover:text-ubuntu-orange transition-colors">Cheatsheets</a>
      <span>/</span>
      <span style="color: var(--text-primary);">Tab Management</span>
    </nav>

    <h1 class="text-3xl font-bold mb-2" style="color: var(--text-primary);">Tab Management Shortcuts</h1>
    <p class="mb-8" style="color: var(--text-secondary);">Keyboard shortcuts for tabs in browsers, terminals, and file managers.</p>

    {Object.entries(groups).map(([subcategory, items]) => (
      <ShortcutTable title={subcategory} shortcuts={items} />
    ))}

    <div class="mt-8 p-4 rounded-lg border" style="background-color: var(--surface-secondary); border-color: var(--border-color);">
      <p class="text-sm" style="color: var(--text-secondary);">
        Want to customize these shortcuts? Check the <a href="/guides/tab-management" class="text-ubuntu-orange hover:underline font-medium">Tab Management Configuration Guide</a>.
      </p>
    </div>
  </div>
</BaseLayout>
