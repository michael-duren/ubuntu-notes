---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ShortcutTable from '../../components/ShortcutTable.astro';
import shortcuts from '../../data/shortcuts.json';

const filtered = shortcuts.filter(s => s.category === 'text-editors');
const groups: Record<string, typeof filtered> = {};
for (const s of filtered) {
  (groups[s.subcategory] ??= []).push(s);
}
---
<BaseLayout title="Text Editor Shortcuts" description="Neovim and Vim keyboard shortcuts â€” modes, navigation, editing, search, splits, and file operations.">
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6 flex items-center gap-2" style="color: var(--text-muted);">
      <a href="/" class="hover:text-ubuntu-orange transition-colors">Home</a>
      <span>/</span>
      <a href="/cheatsheets" class="hover:text-ubuntu-orange transition-colors">Cheatsheets</a>
      <span>/</span>
      <span style="color: var(--text-primary);">Text Editors</span>
    </nav>

    <h1 class="text-3xl font-bold mb-2" style="color: var(--text-primary);">Text Editor Shortcuts</h1>
    <p class="mb-8" style="color: var(--text-secondary);">Essential Neovim/Vim keyboard shortcuts for modes, navigation, editing, searching, and managing splits and buffers.</p>

    {Object.entries(groups).map(([subcategory, items]) => (
      <ShortcutTable title={subcategory} shortcuts={items} />
    ))}

    <div class="mt-8 p-4 rounded-lg border" style="background-color: var(--surface-secondary); border-color: var(--border-color);">
      <p class="text-sm" style="color: var(--text-secondary);">
        Want to configure your editor? Check the <a href="/guides/text-editors" class="text-ubuntu-orange hover:underline font-medium">Text Editor Configuration Guide</a>.
      </p>
    </div>
  </div>
</BaseLayout>
