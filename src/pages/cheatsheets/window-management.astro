---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ShortcutTable from '../../components/ShortcutTable.astro';
import shortcuts from '../../data/shortcuts.json';

const filtered = shortcuts.filter(s => s.category === 'window-management');
const groups: Record<string, typeof filtered> = {};
for (const s of filtered) {
  (groups[s.subcategory] ??= []).push(s);
}
---
<BaseLayout
  title="Ubuntu Window Management Shortcuts"
  description="Default Ubuntu keyboard shortcuts for managing windows â€” snap, resize, move, and switch."
  keywords="ubuntu window shortcuts, snap window ubuntu, tile windows ubuntu, gnome window management"
  breadcrumbs={[
    { name: 'Home', url: '/' },
    { name: 'Cheatsheets', url: '/cheatsheets' },
    { name: 'Window Management', url: '/cheatsheets/window-management' },
  ]}
>
  <div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav aria-label="Breadcrumb" class="text-sm mb-6 flex items-center gap-2" style="color: var(--text-muted);">
      <a href="/" class="hover:text-ubuntu-orange transition-colors">Home</a>
      <span>/</span>
      <a href="/cheatsheets" class="hover:text-ubuntu-orange transition-colors">Cheatsheets</a>
      <span>/</span>
      <span style="color: var(--text-primary);">Window Management</span>
    </nav>

    <h1 class="text-3xl font-bold mb-2" style="color: var(--text-primary);">Ubuntu Window Management Shortcuts</h1>
    <p class="mb-8" style="color: var(--text-secondary);">Default GNOME keyboard shortcuts for snapping, moving, resizing, and switching windows.</p>

    {Object.entries(groups).map(([subcategory, items]) => (
      <ShortcutTable title={subcategory} shortcuts={items} />
    ))}

    <div class="mt-8 p-4 rounded-lg border" style="background-color: var(--surface-secondary); border-color: var(--border-color);">
      <p class="text-sm" style="color: var(--text-secondary);">
        Want to customize these shortcuts? Check the <a href="/guides/window-management" class="text-ubuntu-orange hover:underline font-medium">Window Management Configuration Guide</a>.
      </p>
    </div>
  </div>
</BaseLayout>
