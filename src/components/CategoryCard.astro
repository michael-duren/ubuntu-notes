---
interface Props {
  title: string;
  description: string;
  href: string;
  count?: number;
  icon?: string;
}

const { title, description, href, count, icon } = Astro.props;
---
<a
  href={href}
  class="group block rounded-xl p-6 border transition-all duration-200 hover:-translate-y-1 hover:shadow-lg"
  style="background-color: var(--surface-card); border-color: var(--border-color);"
>
  <div class="flex items-start justify-between mb-3">
    <div
      class="w-10 h-10 rounded-lg flex items-center justify-center text-white text-lg bg-ubuntu-orange group-hover:bg-ubuntu-orange-dark transition-colors"
    >
      {icon === 'desktop' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
      )}
      {icon === 'window' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h12a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V6z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 9h16"></path>
        </svg>
      )}
      {icon === 'tab' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
      )}
      {icon === 'guide' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      )}
      {icon === 'editor' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
        </svg>
      )}
      {icon === 'folder' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
        </svg>
      )}
      {icon === 'drive' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 1.1.9 2 2 2h12a2 2 0 002-2V7a2 2 0 00-2-2H6a2 2 0 00-2 2z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 15h16"></path>
          <circle cx="7" cy="17" r="0.5" fill="currentColor" stroke="none"></circle>
          <circle cx="10" cy="17" r="0.5" fill="currentColor" stroke="none"></circle>
        </svg>
      )}
      {icon === 'debugger' && (
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0-6 0"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9V4M12 15v5M9 12H4M15 12h5M9.5 9.5L6 6M14.5 9.5L18 6M9.5 14.5L6 18M14.5 14.5L18 18"></path>
        </svg>
      )}
    </div>
    {count !== undefined && (
      <span class="text-xs font-medium px-2 py-1 rounded-full bg-ubuntu-orange/10 text-ubuntu-orange">
        {count} shortcuts
      </span>
    )}
  </div>
  <h3 class="font-semibold text-lg mb-1 group-hover:text-ubuntu-orange transition-colors" style="color: var(--text-primary);">
    {title}
  </h3>
  <p class="text-sm leading-relaxed" style="color: var(--text-secondary);">
    {description}
  </p>
</a>
